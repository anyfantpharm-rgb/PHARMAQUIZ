// ----------------- QUIZ ENGINE -----------------
let pool = [...DRUGS];
let current = null;
let score = 0, correct = 0, wrong = 0;
const $ = sel => document.querySelector(sel);

function normalizeGreek(str){
  return (str || "")
    .toString().trim().toLowerCase()
    .normalize("NFD").replace(/\p{Diacritic}/gu, "");
}
function splitCategories(cat){
  return cat.split("/").map(c => c.trim()).filter(Boolean);
}
function uniqueCategories(dataset){
  const set = new Set();
  dataset.forEach(d => splitCategories(d.category).forEach(c => set.add(c)));
  return [...set].sort((a,b)=>a.localeCompare(b,"el"));
}
function renderCategoryOptions(){
  const select = $("#categorySelect");
  select.innerHTML = "";
  const cats = uniqueCategories(DRUGS);
  select.append(new Option("â€” Î´Î¹Î¬Î»ÎµÎ¾Îµ ÎºÎ±Ï„Î·Î³Î¿ÏÎ¯Î± â€”",""));
  cats.forEach(c => select.append(new Option(c,c)));
}
function pickNext(){
  if(pool.length === 0) pool = [...DRUGS];
  const idx = Math.floor(Math.random()*pool.length);
  current = pool.splice(idx,1)[0];

  $("#drugName").textContent = current.drug;
  $("#categoryInput").value = "";
  $("#categorySelect").value = "";
  $("#feedback").className = "feedback";
  $("#feedback").style.display = "none";
  $("#nextBtn").disabled = true;
  $("#checkBtn").disabled = false;
}
function updateScore(){
  $("#score").textContent = score;
  $("#correctCount").textContent = correct;
  $("#wrongCount").textContent = wrong;
}
function showFeedback(ok, msg){
  const fb = $("#feedback");
  fb.textContent = msg;
  fb.className = "feedback " + (ok ? "ok":"bad");
  fb.style.display = "block";
}
function checkAnswer(){
  const typed = $("#categoryInput").value || $("#categorySelect").value;
  if(!typed){
    showFeedback(false,"Î“ÏÎ¬ÏˆÎµ Î® ÎµÏ€Î­Î»ÎµÎ¾Îµ Î¼Î¹Î± ÎºÎ±Ï„Î·Î³Î¿ÏÎ¯Î± Ï€ÏÏÏ„Î± ğŸ™‚");
    return;
  }

  const typedNorm = normalizeGreek(typed);
  const rightCats = splitCategories(current.category);
  const rightNorms = rightCats.map(normalizeGreek);
  const isCorrect = rightNorms.includes(typedNorm);
  const brandLine = `ğŸ“Œ Î•Î¼Ï€Î¿ÏÎ¹ÎºÏŒ ÏŒÎ½Î¿Î¼Î±: ${current.brand || "â€”"}`;

  if(isCorrect){
    score += 10; correct++;
    showFeedback(true,
      `âœ… Î£Ï‰ÏƒÏ„ÏŒ!\n`+
      `Î— "${current.drug}" Î±Î½Î®ÎºÎµÎ¹ ÏƒÏ„Î·Î½ ÎºÎ±Ï„Î·Î³Î¿ÏÎ¯Î±: ${rightCats.join(" / ")}.\n`+
      brandLine
    );
  }else{
    score -= 2; wrong++;
    showFeedback(false,
      `âŒ Î›Î¬Î¸Î¿Ï‚.\n`+
      `Î£Ï‰ÏƒÏ„Î® ÎºÎ±Ï„Î·Î³Î¿ÏÎ¯Î±: ${rightCats.join(" / ")}.\n`+
      brandLine
    );
  }

  $("#nextBtn").disabled = false;
  $("#checkBtn").disabled = true;
  updateScore();
}

$("#checkBtn").addEventListener("click", checkAnswer);
$("#nextBtn").addEventListener("click", pickNext);
$("#revealBtn").addEventListener("click", ()=>{
  const rightCats = splitCategories(current.category);
  const brandLine = `ğŸ“Œ Î•Î¼Ï€Î¿ÏÎ¹ÎºÏŒ ÏŒÎ½Î¿Î¼Î±: ${current.brand || "â€”"}`;
  showFeedback(true, `â„¹ï¸ Î‘Ï€Î¬Î½Ï„Î·ÏƒÎ·: ${rightCats.join(" / ")}\n${brandLine}`);
  $("#nextBtn").disabled = false;
  $("#checkBtn").disabled = true;
});
$("#shuffleBtn").addEventListener("click", ()=>{
  pool = [...DRUGS].sort(()=>Math.random()-0.5);
  pickNext();
});
$("#categorySelect").addEventListener("change", (e)=>{
  if(e.target.value) $("#categoryInput").value = e.target.value;
});

renderCategoryOptions();
pickNext();
updateScore();
</script>
